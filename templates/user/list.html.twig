{% extends 'base.html.twig' %}

{% block title %}User list{% endblock %}
{% block body %}
    <div class="container">
        <h1>Users
            <a class="btn btn-success float-right" style="margin-top: 10px;" href="{{ path('user_signup') }}">Add User</a>
        </h1>
        <table class="table" id="user-table">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Enabled/Disabled</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>

                        <td>
                    {% if user.enabled %} Enabled {% else %} Disabled {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('user_edit', {id:user.id})  }}">Edit </a>
                            {% if currentUser!=user %}
                                |
                                <a href="{{ path('user_delete', {id:user.id})  }}" onclick="return confirm('Are you sure you want to delete {{ user.username }}?')"> Delete</a>
                                |
                                <a href="{{ path('user_change', {id:user.id})  }}">
                                    {% if user.enabled  %}
                                        Disable
                                    {% else %}
                                        Enable
                                    {% endif %}
                            </a>
                            {% endif %}

                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        $(document).ready(function () {
            $('#user-table').DataTable( {
            });
        });
    </script>
{% endblock %}
