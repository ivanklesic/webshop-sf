{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}
{% block body %}
<div class="container">
    <h1>{{ product.name }}
    </h1>


    <div>
        Description: {{ product.description }}
    </div>
    <div>
        Price: {{ product.price }}
    </div>
    <div>
        Serial number: {{ product.serialNumber }}
    </div>
    <div>
        Stock: {{ product.stock }}
    </div>




    <div>
        <a href="{{ app.request.headers.get('referer') }}" class="btn btn-light">Back</a>
</div>


    {% endblock %}

    {% block javascripts %}
    {% endblock %}